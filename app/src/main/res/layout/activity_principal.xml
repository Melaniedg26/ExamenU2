<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="134dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/grupo2" />

    <Button
        android:id="@+id/btn_detalles"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E35B6F"
        android:text="Detalles" />
    <Button
        android:id="@+id/btn_globos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E35B6F"

        android:text="Globos" />

    <Button
        android:id="@+id/btn_peluches"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E35B6F"

        android:text="Peluchess" />
    <Button
        android:id="@+id/btn_regalos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E35B6F"

        android:text="Regalos" />
    <Button
        android:id="@+id/btn_tazas"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E35B6F"

        android:text="Tazas" />

</LinearLayout>